{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "NodeNext",
    "skipLibCheck": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,

    "baseUrl": ".",
    "paths": {
      "~lib/*": ["lib/*"]
    }
  },
  "include": ["lib/", "__tests__/"]
}
